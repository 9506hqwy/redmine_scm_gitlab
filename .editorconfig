root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{ini,toml}]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.rb]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
