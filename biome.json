{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "include": [
            "src/**/*.css",
            "src/**/*.js",
            "src/**/*.ts",
            "test/e2e/**/*.ts"
        ]
    },
    "formatter": {
        "indentStyle": "space"
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    }
}
